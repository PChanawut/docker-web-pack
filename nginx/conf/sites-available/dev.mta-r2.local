## MTA WEBVIEW
server {
    listen       80;
    server_name  dev.mta-r2.local www.dev.mta-r2.local;

    location / {
        root   /usr/share/nginx/html/MTA-Core-R2/mta_webview;
        index  index.php index.html index.htm;

        try_files $uri $uri/ =404;
        location ~*  \.(jpg|jpeg|png|gif|ico|css|js|mp4)$ {
            expires 30d;
        }

        #error_page  404              /404.html;

        # redirect server error pages to the static page /50x.html
        #
        error_page   500 502 503 504  /50x.html;
        location = /50x.html {
            root   /usr/share/nginx/html;
        }

        # proxy the PHP scripts to Apache listening on 127.0.0.1:80
        #
        #location ~ \.php$ {
        #    proxy_pass   http://127.0.0.1;
        #}

        # pass the PHP scripts to FastCGI server listening on 127.0.0.1:9000
        #
        location ~ \.php$ {
        #    root           html;
            fastcgi_pass   docker-web-phpfpm:9000;
            fastcgi_index  index.php;
            fastcgi_param  SCRIPT_FILENAME  $document_root$fastcgi_script_name;
            include        fastcgi_params;
        }

        # uri rewrite for codeigniter
        location / {
            try_files $uri $uri/ /index.php?/$request_uri;
        }

        location ~* ^/(assets|files|robots\.txt) { }

        # deny access to .htaccess files, if Apache's document root
        # concurs with nginx's one
        #
        location ~ /\.ht {
           deny  all;
        }
    }
}
